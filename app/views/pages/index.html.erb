<div id="index" class="container">
<p class="right">
  <%= link_to new_page_path, class: "btn btn-success" do %>
    <%= glyph("pushpin") %> 新規投稿
  <% end %>
</p>
<% @pages.each do |page| %>
  <div class="col-sm-4 area">
    <div class="page">
      <div class="contents-area">
        <div class="title">
          <%= render "favorite_form", { page: page } %>
          <%= page.name %>
        </div>
        <p class="url"><%= link_to page.url, page.url %></p>
      </div>
      <p class="tags_area">
        <% page.tag_list[0..2].each do |tag| %>
          <%= link_to tag, search_pages_path(search_text: tag), class: "label label-primary xs" %>
        <% end %>
      </p>
      <p class="update_time right">更新日時：<%= format_date(page.updated_at) %></p>
      <div class="btn-area right">
        <%= link_to page, class: "btn btn-info btn-sm" do %>
          <%= glyph("eye-open") %>
        <% end %>
        <%= link_to edit_page_path(page), class: "btn btn-warning btn-sm" do %>
          <%= glyph("edit") %>
        <% end %>
        <%= link_to page, method: :delete, class: "btn btn-danger btn-sm", data: { confirm: "#{page.name}を削除してよろしいですか？" } do %>
          <%= glyph("trash") %>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
</div>