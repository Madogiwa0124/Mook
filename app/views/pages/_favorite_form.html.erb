<% unless page.is_favorited?(@user) %>
  <% favorite = page.favorite.new(user_id: @user.id) %>
  <%= form_for favorite, html: { class: "inline" } do |f| %>
    <%= f.hidden_field :page_id %>
    <%= f.hidden_field :user_id %>
    <%= f.button class: "favorite_btn" do %>
      <%= glyph("heart") %>
    <% end %>
  <% end %>
<% else %>
  <% favorite = page.favorite.find_by(user_id: @user.id) %>
  <%= form_for favorite, html: { class: "inline" },  method: "delete" do |f| %>
    <%= f.hidden_field :page_id %>
    <%= f.hidden_field :user_id %>
    <%= f.button class: "favorite_btn favorited" do %>
      <%= glyph("heart") %>
    <% end %>
  <% end %>
<% end %>